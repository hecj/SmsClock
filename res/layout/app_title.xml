<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:background="@drawable/app_title"
    android:layout_alignParentTop="true"
    >
    
    <Button android:id="@+id/tv_app_title_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/app_title_back" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_marginLeft="8dp"/>
    <TextView android:id="@+id/app_title_name" android:textColor="#FFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/style_app_title"/>
    <TextView android:id="@+id/app_title_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="5dp" android:layout_alignParentRight="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_body_bg"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
         >

        <TextView
            android:id="@+id/sms_alarm_sms_group_thread_listitem_recivertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/sms_alarm_sms_group_thread_listitem_reciver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sms_alarm_sms_group_thread_listitem_recivertime"
            android:layout_marginRight="50dp"
            android:background="@drawable/sms_talk_left"
            android:gravity="center_vertical"
            android:textSize="14sp" 
            android:textColor="@color/setting_item_text"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/sms_alarm_sms_group_thread_listitem_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/sms_alarm_sms_group_thread_listitem_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sms_alarm_sms_group_thread_listitem_sendtime"
            android:layout_marginLeft="50dp"
            android:background="@drawable/sms_talk_right"
            android:gravity="center_vertical"
            android:textSize="14sp" 
            android:textColor="#FFF"
            />
    </RelativeLayout>

</FrameLayout>